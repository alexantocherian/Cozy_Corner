<script>
  let index = 0;
  const slides = document.getElementById("slides");
  setInterval(() => {
    index = (index + 1) % 3;
    slides.style.transform = `translateX(-${index * 100}%)`;
  }, 4000);

  const items = [
    {name:"Espresso", img:"https://images.unsplash.com/photo-1510707577719-ae7c14805e3a", price:"‚Çπ150"},
    {name:"Latte", img:"https://images.unsplash.com/photo-1509042239860-f550ce710b93", price:"‚Çπ220"},
    {name:"Chocolate Cake", img:"https://images.unsplash.com/photo-1578985545062-69928b1d9587", price:"‚Çπ180"},
    {name:"Red Velvet Cake", img:"https://images.unsplash.com/photo-1614707267537-b85aaf00c4b7", price:"‚Çπ200"},
    {name:"Cheesecake", img:"https://images.unsplash.com/photo-1542826438-bd32f43d626f", price:"‚Çπ210"},
    {name:"Brownie with Ice Cream", img:"https://images.unsplash.com/photo-1606313564200-e75d5e30476c", price:"‚Çπ190"}
  ];

  const menuList = document.getElementById("menuList");
  items.forEach(i => {
    menuList.innerHTML += `
      <div class="menu-item">
        <img src="${i.img}">
        <h4>${i.name}</h4>
        <div class="price">${i.price}</div>
      </div>`;
  });

  document.getElementById("reserveForm").addEventListener("submit", e => {
    e.preventDefault();
    document.getElementById("msg").style.display = "block";
    e.target.reset();
  });
</script>

